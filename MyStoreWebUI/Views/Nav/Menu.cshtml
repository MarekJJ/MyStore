@*menu about categories*@

@model IEnumerable<string>
@Html.ActionLink("Home", "List", "Home", null,new { @class = "btn btn-block btn-default btn-lg" })
@foreach (var link in Model)
{
    <div class="buttons" style="margin-top:10px;">
        @Html.RouteLink(link, new { controller = "Home", action = "List", category = link, page = 1 }, new { @class = "btn btn-block btn-default btn-lg" + (link == ViewBag.SelectedCategory ? " btn-primary" : "") })
    </div>
}