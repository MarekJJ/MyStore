@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <script src="~/Scripts/jquery-1.10.2.js"></script> @*te trzy sa poto zeby mozna bylo prowadzic kontrole poprawnosci po stronie klijeta strona 294*@
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />*@<!--do usuniecia jak wszystko bedzie ok-->
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <title></title>
</head>
<body>
    <div>
        @if (TempData["message"] != null) //TempData jest jak sesja tylko nie ma ograniczenia czaswego
