@model MyStoreWebUI.Models.ProductsListViewModel

<!--list of products-->

    
    @foreach (var p in Model.MyItems) 
    {
        <div class="col-lg-3 col-md-6 col-sm-9  ">
            <div class="ColorCSS ">
                @Html.Partial("ProductSummary", p) @* printing list of products*@        
            </div>
        </div>
    }

    <div style="margin-top:950px;   margin-left:590px">
        <br />
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x, category = Model.CurrentCategory }))
    </div>



